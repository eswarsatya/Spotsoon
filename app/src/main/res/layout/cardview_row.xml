<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  android:layout_margin="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_videos"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="120dp"
           >

            <ImageView
                android:id="@+id/igv_ProfilePic"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_alignTop="@+id/tv_videoName" />

            <TextView
                android:id="@+id/tv_videoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:text=" "
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/igv_ProfilePic" />

            <TextView
                android:id="@+id/tv_videotime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/watch"
                android:layout_below="@id/tv_videoName"
                android:layout_toRightOf="@id/igv_ProfilePic" />

            <TextView
                android:id="@+id/tv_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defaulttext"
                android:paddingBottom="10dp"
                android:layout_marginLeft="10dp"

                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/igv_ProfilePic"
                android:layout_toEndOf="@+id/igv_ProfilePic" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
